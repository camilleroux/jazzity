%article#note-sequence
  %header
    %h1
      Note Sequence:
      = @note_sequence.title

  %nav#key-selector
    %h2 Key:
    %ul
      - Key.primaries.each do |key|
        %li{:class => ("current" if @key == key)}= link_to_unless @key == key, key, [key, @note_sequence]

  %section#staff
    .staff.chord-staff{"data-staff" => @note_sequence.octavized_notes.to_json, "data-staff-clef" => "treble"}

  - unless @note_sequence.chords.empty?
    %nav.related-chords
      %h3 Related Chords:
      %ul.chords-list
        = render @note_sequence.chords

  - unless @note_sequence.modes.empty?
    %nav.related-modes
      %h3 Related Scales:
      %ul.modes-list
        = render @note_sequence.modes

