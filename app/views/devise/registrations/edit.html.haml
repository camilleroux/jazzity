= render "musicians/profiles/tabs"

%section#edit-account
  %h1 Edit Account
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = f.error_notification
    .inputs
      = f.input :first_name, :label => "First Name", :required => true, :autofocus => true
      = f.input :last_name, :label => "Last Name", :required => true, :autofocus => true
      = f.input :email, :required => true
      = f.input :password, :label => "New Password", :hint => "leave it blank if you don't want to change it", :required => false
      = f.input :password_confirmation, :label => "Confirm", :required => false
      = f.input :current_password, :label => "Current Password", :hint => "we need your current password to confirm your changes", :required => true
    .actions
      = f.button :submit, "Update"

%section#cancel-account
  %h1 Cancel My Account
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
