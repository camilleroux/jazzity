%section#sign-in-with-email
  %h1 Sign In with E-mail:
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .inputs
      = f.input :email, :required => false, :autofocus => true
      = f.input :password, :required => false
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
    .actions
      = f.button :submit, "Sign in"
      = link_to "Forgot Your Password?", new_password_path(resource_name)

%section#sign-in-with-services
  %h1 Sign In with Other Services:
  %p= link_to "Sign In with Facebook", musician_omniauth_authorize_path(:facebook), :class => "btn-auth btn-facebook large"
  %p= link_to "Sign In with Twitter", musician_omniauth_authorize_path(:twitter), :class => "btn-auth btn-twitter large"

%section#sign-in-register
  %h1
    Not a member? #{link_to "Sign Up Now", new_musician_registration_path}!
