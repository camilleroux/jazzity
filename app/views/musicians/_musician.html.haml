%article[musician]
  = link_to image_tag(musician.avatar_url(:small), :alt => "#{musician}'s Avatar"), musician, :class => "avatar" if musician.has_avatar?
  %h3= link_to musician, musician
  %ul.attributes
    - if musician.instrument
      %li= musician.instrument
    - if musician.secondary_instrument
      %li= musician.secondary_instrument
    - if musician.location
      %li= musician.location
    - if musician.born_on? or musician.died_on?
      %li= [musician.born_on.try(:year), musician.died_on.try(:year)].join(" - ")

  %p= truncate musician.biography, :length => 200
