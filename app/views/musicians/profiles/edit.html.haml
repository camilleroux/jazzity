= render "musicians/profiles/tabs"

= simple_form_for :musician, :url => musicians_profile_path, :html => {:method => :put, :id => "update-profile-form"} do |f|
  %h1 Your Profile

  %fieldset#profile-basic
    = f.input :website_url, :label => "Website URL", :required => false, :placeholder => "http://www.yourwebsite.com/"
    = f.input :twitter_username, :label => "Twitter Handle", :required => false, :placeholder => "@jazzity"
    = f.input :youtube_username, :label => "YouTube Username", :required => false
    = f.input :location, :required => false
    = f.input :instrument, :required => false, :collection => Instrument.all
    = f.input :secondary_instrument, :label => "Other Instrument", :required => false, :collection => Instrument.all
    = f.input :music_school, :label => "Music School", :required => false
    = f.input :plays_professionally, :label => "Professional?", :required => false, :as => :boolean
    = f.input :studies_privately, :label => "Study Privately?", :required => false, :as => :boolean
      
  %fieldset#profile-favorites
    -# TODO: nested_form from Ryan Bates interface?

  %fieldset#profile-tunes
    -# TODO: nested_form from Ryan Bates interface?

  %fieldset.buttons
    = f.submit "Save Profile"
