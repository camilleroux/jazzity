%header
  %h1= "#{@progression.title}: #{@progression.chords.map(&:short_name).join(', ')}"

  - if @progression.meter
    %p
      %label Meter: 
      = @progression.meter
  - if @progression.form
    %p
      %label Form:
      = @progression.form
  - if @progression.full_tune?
    %p
      %label Full Tune
  - if @progression.bars
    %p
      %label Bars:
      = @progression.bars
