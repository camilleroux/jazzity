%header
  = render "shared/social_sharing"

  %h1
    = "#{@progression.title}: "
    = raw @progression.chords.map {|c| link_to(c.short_name, [c.key, c].compact) }.join(", ")

  - if @progression.meter
    %p
      %label Meter: 
      = @progression.meter
  - if @progression.form
    %p
      %label Form:
      = @progression.form
  - if @progression.full_tune?
    %p
      %label Full Tune
  - if @progression.bars
    %p
      %label Bars:
      = @progression.bars
