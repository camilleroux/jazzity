%article#progression
  %h1= @progression

  - if @progression.meter
    %p
      %label Meter: 
      = @progression.meter
  - if @progression.form
    %p
      %label Form:
      = @progression.form
  %p
    %label Full Tune?
    = @progression.full_tune? ? "Yes" : "No"
  %p
    %label Bars:
    = @progression.bars

  %p
    = @progression.summary
  %p
    = @progression.information

  - if @progression.tunes_based_on.exists?
    %section#tunes-based-on
      %h2 Tunes Based on this Progression:
      %ul
        - @progression.tunes_based_on.each do |tune|
          %li= link_to tune, tune

  
  = render "comments/index", :commentable => @progression
