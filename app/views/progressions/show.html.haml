%article#progression
  %h1= @progression

  - if @progression.meter
    %p
      %label Meter: 
      = @progression.meter
  - if @progression.form
    %p
      %label Form:
      = @progression.form
  %p
    %label Full Tune?
    = @progression.full_tune? ? "Yes" : "No"
  %p
    %label Bars:
    = @progression.bars

  %p
    = @progression.summary
  %p
    = @progression.information

  
  = render "comments/index", :commentable => @progression
