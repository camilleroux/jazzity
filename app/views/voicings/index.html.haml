= render "chords/index"

%article#chord
  %nav#key-selector
    %h2 Key:
    %ul
      - Key.primaries.each do |key|
        %li= link_to_unless @key == key, key, [key, @chord]

  = render "chords/header"
  = render "chords/tabs"

  - if @voicings.present?
    %nav.related-voicings
      %h3 Voicings for #{@chord}:
      %ul.voicings-list
        = render @voicings, :key => @key

